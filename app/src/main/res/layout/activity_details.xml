<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".RadioActivity"
    android:background="@drawable/bg3">

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/search_bar"
        android:hint="Entrez la station... "
        android:paddingLeft="45.0dip"
        android:singleLine="true"
        android:textSize="15.0sp"
        android:id="@+id/text_search"
        android:layout_alignBottom="@+id/button_search" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0.0dip"
        android:background="@drawable/zoomicon"
        android:id="@+id/button_search" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/android:list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_search" />


</RelativeLayout>
